<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.5) 0%, rgba(0,36,61,0.4) 50%), url('https://theinnatlospatios.com/wp-content/uploads/2016/08/4-1-1024x684.jpeg');">
  <div class="banner-content">
    <h1>Grandpa-Rent</h1>
    <p>Rent your elderly person</p>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
      <div class="row">

        <% @elders.each do |elder| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <% if elder.photo.file %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path elder.photo, height: 300, width: 400, crop: :fill, gravity: :face %>);">
            <% else %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://ak4.picdn.net/shutterstock/videos/5431364/thumb/1.jpg?i10c=img.resize(height:175);">
            <% end %>
                <div class="card-description">
                  <h2><%= elder.full_name %></h2>
                  <p><%= elder.address %></p>
                </div>
              <%= link_to "", elder_path(elder), class: "card-link" %>
              </div>
          </div>
        <% end %>

      </div>
    </div>

    <div class="hidden-xs col-sm-4 col-md-4 col-lg-4">
      <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>

  </div>
</div>
