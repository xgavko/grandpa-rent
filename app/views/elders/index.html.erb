<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://theinnatlospatios.com/wp-content/uploads/2016/08/4-1-1024x684.jpeg');">
  <div class="banner-content">
    <h1>Grandpa-Rent</h1>
    <p>Rent your elderly person</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @elders.each do |elder| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <% if elder.photo.file %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path elder.photo%>);">
        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://ak4.picdn.net/shutterstock/videos/5431364/thumb/1.jpg?i10c=img.resize(height:175);">
        <% end %>
          <div class="card-description">
            <h2><%= elder.full_name %></h2>
            <p><%= elder.address %></p>
          </div>
          <%= link_to "", elder_path(elder), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
