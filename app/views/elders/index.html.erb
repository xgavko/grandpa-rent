<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.5) 0%, rgba(0,36,61,0.4) 50%), url('https://theinnatlospatios.com/wp-content/uploads/2016/08/4-1-1024x684.jpeg');">
  <div class="banner-content">
    <h1>Grandpa-Rent</h1>
    <p>Rent your elderly person</p>
    <p>Your location:</p>
    <%= link_to root_path(query: 'Bordeaux') do %>
      <div class="btn btn-primary">Bordeaux</div>
    <% end %>
    <%= link_to root_path(query: 'Paris') do %>
      <div class="btn btn-primary">Paris</div>
    <% end %>
  </div>
</div>

<!-- <div class="container"> -->
  <div class="row">
    <div class="col-xs-12 col-md-8">


      <% @elders.each do |elder| %>
        <div class="col-xs-12 col-sm-6 col-md-4 card">

          <div class="card-body">
            <div class="card-tags">
              <% elder.skills.each do |skill| %>
                 <div class="card_tag">
                  <%= skill.name %>
                 </div>
              <% end %>
              </div>
            <%= link_to elder_path(elder) do %>
              <div class="card-picture" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= cl_image_path elder.photo, height: 300, width: 400, crop: :fill, gravity: :face %>);">

              </div>
            <% end %>
              <div class="card-footer">
                <ul class="list-inline">
                  <li class="name"> <%= elder.full_name %></li>
                  <li> <%=elder.rating  %> ⭐️</li>
                </ul>
              </div>
          </div>
        </div>
      <% end %>

    </div>
    <div class="col-xs-12 col-md-4">
      <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
<!-- </div> -->


