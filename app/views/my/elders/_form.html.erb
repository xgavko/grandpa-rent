<%= simple_form_for [:my, elder] do |f| %>
    <%= f.input :full_name, label: 'Your Elder should have an uniq full_name', error: 'Please read the abovementionned criteria' %>
    <%= f.input :address, label: 'We should be able to locate you Elder', error: 'Please read the abovementionned criteria' %>
    <%= f.input :description, label: 'Could be nice to describe this old thing' %>
    <%= f.association :skills, as: :check_boxes, label: 'Why should I pick your Elder?' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
